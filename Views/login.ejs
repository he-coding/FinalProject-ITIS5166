<%- include('./partials/header.ejs')%>
<main>
    <h1>Log In</h1>
    <form action="/users/login" method="POST">
        <label for="email">Email:</label><br>
        <input type="email" id="email" name="email" required pattern="[^@\s]+@[^@\s]+\.[^@\s]+" title="Please enter a valid email address"><br><br>

        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password" required pattern=".{8,}" title="Password must be at least 8 characters long"><br><br>

        <input type="submit" value="Log In">
    </form>
</main>
